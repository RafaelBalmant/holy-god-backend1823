{
  "compilerOptions": {
    "baseUrl": "./src", // Base URL para resolver os caminhos
    "paths": {
      "@interfaces/*": ["interfaces/*"],
      "@services/*": ["domain/services/*"],
      "@repositories/*": ["repositories/*"],
    },
    "outDir": "./dist", // Diretório de saída para os arquivos compilados
    "rootDir": "./src", // Diretório raiz dos arquivos TypeScript
    "target": "ES6",
    "module": "commonjs",
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}