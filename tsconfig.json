{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@interfaces/*": ["interfaces/*"],
      "@services/*": ["domain/services/*"],
      "@repositories/*": ["infra/repositories/*"],
      "@models/*": ["infra/models/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*" ],
  "exclude": ["node_modules", "dist"]
}
